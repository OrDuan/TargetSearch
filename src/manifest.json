{
  "name": "TargetSearch",
  "version": "0.6",
  "manifest_version": 2,
  "description": "Easily locate the text you searched on the result page",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    "icons/icon16.png",
    "icons/icon48.png",
    "icons/icon128.png",
    "popup-styles.css",
    "media/**"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "storage",
    "identity",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "app.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}
